{% extends 'base.html.twig' %}

{% block title %}Hello AdvisorController!{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="text-align-center text-color-primary">Customer Requests completed</h2>
            
            <div class="table-responsive mt-2">
                <table class="table table-hover">
                    <thead class="text-size-12">
                        <tr class="table-color-primary th-quaternary">
                            <th>Name</th>
                            <th>First Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone number</th>
                            <th>Register date</th>
                            <th>Show</th>
                        </tr>
                    </thead>
                    <tbody class="text-size-12 text-bold ">
                        {% for customerRequest in customerRequests %}
                            {% if customerRequest.idCardFront != null and customerRequest.idCardBack != null and customerRequest.proofOfAddress != null %}
                                <tr class="td-quaternary {{ cycle(['table-color-primary-7', 'table-color-primary-6'], loop.index0) }} researchElementLine">
                                    <td class="text-align-center researchElement1">{{customerRequest.name}}</td>
                                    <td class="text-align-center ">{{customerRequest.firstName}}</td>
                                    <td class="text-align-center">{{customerRequest.email}}</td>
                                    <td class="text-align-center">{{customerRequest.postalAddress}}<br>{{customerRequest.postalCode}}<br>{{customerRequest.city}}<br>{{customerRequest.country}}</td>
                                    <td class="text-align-center">{{customerRequest.phoneNumber}}</td>
                                    <td class="text-align-center">{{customerRequest.registerDate | date('d-m-Y')}}</td>
                                    <td class="text-align-center">
                                    <a href="{{path('customerRequestsById', {'id':customerRequest.id})}}">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                                            <path d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                        </svg>
                                    </a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="text-align-center text-color-primary">Customer Requests uncompleted</h2>
            
            <div class="table-responsive mt-2">
                <table class="table table-hover">
                    <thead class="text-size-12">
                        <tr class="table-color-primary th-quaternary">
                            <th>Name</th>
                            <th>First Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone number</th>
                            <th>Register date</th>
                            <th>Show</th>
                        </tr>
                    </thead>
                    <tbody class="text-size-12 text-bold ">
                        {% for customerRequest in customerRequests %}
                            {% if customerRequest.idCardFront == null or customerRequest.idCardBack == null or customerRequest.proofOfAddress == null %}
                                <tr class="td-quaternary {{ cycle(['table-color-primary-7', 'table-color-primary-6'], loop.index0) }} researchElementLine">
                                    <td class="text-align-center researchElement1">{{customerRequest.name}}</td>
                                    <td class="text-align-center ">{{customerRequest.firstName}}</td>
                                    <td class="text-align-center">{{customerRequest.email}}</td>
                                    <td class="text-align-center">{{customerRequest.postalAddress}}<br>{{customerRequest.postalCode}}<br>{{customerRequest.city}}<br>{{customerRequest.country}}</td>
                                    <td class="text-align-center">{{customerRequest.phoneNumber}}</td>
                                    <td class="text-align-center">{{customerRequest.registerDate | date('d-m-Y')}}</td>
                                    <td class="text-align-center">
                                    <a href="{{path('customerRequestsById', {'id':customerRequest.id})}}">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                                            <path d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                        </svg>
                                    </a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        
    </div>
{% endblock %}
