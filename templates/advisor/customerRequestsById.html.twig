{% extends 'base.html.twig' %}

{% block title %}Hello CustomerRegisterController!{% endblock %}

{% block body %}
<div class="row justify-content-center mt-6">
    <div class="row justify-content-center text-align-center">
        <div class="col-8">
            <h1 class="text-color-primary">Customer Request for : {{customerRequest.name}} {{customerRequest.firstName}}.</h1>
        </div>
    </div>

    {% if customerRequest.idCardFront != null and customerRequest.idCardBack != null and customerRequest.proofOfAddress != null %}
        <div class="row justify-content-center text-align-center mt-4 mb-4">
            <div class="col-8">
                <a href="{{path('confirmCustomerRequest', {'id':customerRequest.id})}}"><button class="btn btn-secondary">Confirm Request</button></a>
            </div>
        </div>
    {% endif %}

    <div class="col-6">
        <div class="row justify-content-center text-align-center">
            <div class="col-8">
                <h1 class="text-color-primary">Details.</h1> 

                
                <table class="table">
                    <tbody  class="text-color-primary text-bold">
                        <tr>
                            <td class="text-align-left">Email</td>
                            <td class="text-align-center">- -</td>
                            <td class="text-align-right">{{customerRequest.email}}</td>
                        </tr>
                        <tr>
                            <td class="text-align-left">Phone number</td>
                            <td class="text-align-center">- -</td>
                            <td class="text-align-right">{{customerRequest.phoneNumber}}</td>
                        </tr>
                        <tr>
                            <td class="text-align-left">Address</td>
                            <td class="text-align-center">- -</td>
                            <td class="text-align-right">{{customerRequest.postalAddress}} {{customerRequest.postalCode}} {{customerRequest.city}}</td>
                        </tr>


                    </tbody>
                </table>
            
            </div>
        </div>
    </div>

    <div class="row justify-content-center text-align-center mt-4">
            <div class="col-3">
                {% if customerRequest.idCardFront != null %}
                    <div class="customerDocumentCard">
                        <p class="title">Identity card front side</p>
                        <a href="{{file_directory_twig}}document/idCardFront/{{customerRequest.idCardFront.name}}.{{customerRequest.idCardFront.ex}}" class="leftButton">
                            <p>Show</p>
                            <div >
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                    <path d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                </svg>
                            </div>
                        </a>
                        <a href="{{path('customerRequestRefuseDocument', {'id':customerRequest.idCardFront.id, 'type':1})}}" class="rightButton">
                            <p>Refuse</p>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                <path d="M0 0h24v24H0z" fill="none"/>
                                <path d="M0 0h24v24H0V0z" fill="none"/>
                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"/>
                            </svg>
                        </a>
                    </div>  
                {% else %} 
                    <div class="customerDocumentCard">
                        <p class="title">Identity card front side</p>
                        <div class="centerButton">None</div>
                    </div>   
                {% endif %}
            </div>

            <div class="col-3 ml-6 mr-6">
                {% if customerRequest.idCardBack != null %}
                    <div class="customerDocumentCard">
                        <p class="title">Identity card back side</p>
                        <a href="{{file_directory_twig}}document/idCardBack/{{customerRequest.idCardBack.name}}.{{customerRequest.idCardBack.ex}}" class="leftButton">
                            <p>Show</p>
                            <div >
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                    <path d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                </svg>
                            </div>
                        </a>
                        <a href="{{path('customerRequestRefuseDocument', {'id':customerRequest.idCardBack.id, 'type':2})}}" class="rightButton">
                            <p>Refuse</p>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                <path d="M0 0h24v24H0z" fill="none"/>
                                <path d="M0 0h24v24H0V0z" fill="none"/>
                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"/>
                            </svg>
                        </a>
                    </div> 
                {% else %}  
                    <div class="customerDocumentCard">
                        <p class="title">Identity card back side</p>
                        <div class="centerButton">None</div>
                    </div> 
                {% endif %} 
            </div>

            <div class="col-3 ">
                {% if customerRequest.proofOfAddress != null %}
                    <div class="customerDocumentCard">
                        <p class="title">Proof of address</p>
                        
                        <a href="{{file_directory_twig}}document/proofOfAddress/{{customerRequest.proofOfAddress.name}}.{{customerRequest.proofOfAddress.ex}}" class="leftButton">
                            <p>Show</p>
                            <div >
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                    <path d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                </svg>
                            </div>
                        </a>
                        <a href="{{path('customerRequestRefuseDocument', {'id':customerRequest.proofOfAddress.id, 'type':3})}}" class="rightButton">
                            <p>Refuse</p>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#dadbdd">
                                <path d="M0 0h24v24H0z" fill="none"/>
                                <path d="M0 0h24v24H0V0z" fill="none"/>
                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"/>
                            </svg>
                        </a>
                    </div> 
                {% else %}  
                    <div class="customerDocumentCard">
                        <p class="title">Proof of address</p>
                        <div class="centerButton">None</div>
                    </div> 
                {% endif %}  
            </div>
        </div>
    </div>

    
</div>
{% endblock %}
