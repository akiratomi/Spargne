{% extends 'base.html.twig' %}

{% block title %}Getting Hire{% endblock %}

{% block body %}

{% if error is defined %}
<div class="row justify-content-center mt-6">
    <div class="col">
        <h1 class="text-color-primary text-align-center">{{errorTag}}</h1>
    </div>
</div>
{% else %}
<div class="row justify-content-center">
    <div class="col">
        <h1 class="text-color-primary text-align-center">Welcome to the S'Pargne hire page as advisor</h1>
        <h2 class="text-color-primary text-align-center">Please enter your personnal datas to create your advisor account</h2>
    </div>
</div>

<div class="row justify-content-center text-align-center mt-2">
    <a href="{{path('declineHire',{id:hire.id})}}"><button class="col-3 btn btn-danger">
        Decline
    </button></a>
</div>

<div class="row justify-content-center mt-4 mb-6">
    <div class="col-5">
        {{ form_start(form) }}
        {{form_label(form.email, 'Email address :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.email, {'attr':{'class':'form-control mb-2'}})}}

        {{form_label(form.name, 'Name :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.name, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.firstName, 'First name :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.firstName, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.phoneNumber, 'Phone number :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.phoneNumber, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.country, 'Country :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.country, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.postalCode, 'Postal code :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.postalCode, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.city, 'City :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.city, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_label(form.postalAddress, 'Postal address :', {'label_attr':{'class':'label'}} )}}
        {{form_widget(form.postalAddress, {'attr':{'class':'form-control  mb-2'}})}}

        {{form_widget(form.Register, {'attr':{'class':'btn btn-secondary'}})}}
        {{form_end(form, {render_rest: true})}}
    </div>
</div>
{% endif %}

{% endblock %}
