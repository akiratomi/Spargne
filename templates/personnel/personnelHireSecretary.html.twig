{% extends 'basePersonnel.html.twig' %}

{% block title %}Hire Secretary page{% endblock %}

{% block personnel %}
<div class="row justify-content-center">
    <div class="col">
        <h1 class="text-color-primary text-align-center">Hire a new Secretary</h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-6">
        <form action="{{ path('personnelHireSecretary') }}" method="post">
            <div class="row justify-content-center mb-3 mt-3">
                <div class="col-6 text-align-center mr-1 text-color-primary">
                    <label for="email" class="label">Email for hire request :</label>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-6">
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email address ..." required autofocus>
                </div>
                <div class="col-3 text-align-center ml-1 text-color-primary">
                    <button class="btn btn-secondary" type="submit" name="hireSecretaryBtn">
                        Send hire request
                    </button>
                </div>
            </div>
            {% if error is defined %}
                <div class="row justify-content-center">
                    <div class="col">
                        <h1 class="text-color-quinary text-align-center">Please enter a valid address</h1>
                    </div>
                </div>
            {% endif %}
        </form>
    </div>
</div>


{% endblock %}
