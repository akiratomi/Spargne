{% extends 'base.html.twig' %}

{% block title %}Meeting Requests{% endblock %}

{% block body %}
    <div class="col-6 mt-6">

        <h2 class="text-align-center text-color-primary">Meeting Requests Unbooked</h2>
        
        <div class="table-responsive mt-2">
            <table class="table table-hover">
                <thead class="text-size-12">
                    <tr class="table-color-primary th-quaternary">
                        <th>Topic</th>
                        <th>Desired date</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Appointed advisor</th>
                        <th>Schedule the meeting</th>
                    </tr>
                </thead>
                <tbody class="text-size-12 text-bold ">
                    {% for meetingRequest in meetingRequests %}
                        <tr class="td-quaternary {{ cycle(['table-color-primary-7', 'table-color-primary-6'], loop.index0) }}">
                            <td class="text-align-center">{{meetingRequest.topic.libelle}}</td>
                            <td class="text-align-center">{{meetingRequest.desiredDate | date('d-m-Y')}}</td>
                            <td class="text-align-center">{{meetingRequest.customer.name}} {{meetingRequest.customer.firstName}}</td>
                            <td class="text-align-center">{{meetingRequest.customer.email}}</td>
                            <td class="text-align-center">{{meetingRequest.customer.phoneNumber}}</td>
                            <td class="text-align-center">{{meetingRequest.customer.advisor.name}} {{meetingRequest.customer.advisor.firstName}}</td>
                            <td class="text-align-center">
                                <a href="{{path('advisorSchedule', {'idAccount':meetingRequest.customer.advisor.id, 'idMeeting':meetingRequest.id})}}">
                                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#eeeeee">
                                        <rect fill="none" height="24" width="24"/>
                                        <path d="M5,10h14v2h2V6c0-1.1-0.9-2-2-2h-1V2h-2v2H8V2H6v2H5C3.89,4,3.01,4.9,3.01,6L3,20c0,1.1,0.89,2,2,2h7v-2H5V10z M5,6h14v2H5 V6z M22.84,16.28l-0.71,0.71l-2.12-2.12l0.71-0.71c0.39-0.39,1.02-0.39,1.41,0l0.71,0.71C23.23,15.26,23.23,15.89,22.84,16.28z M19.3,15.58l2.12,2.12l-5.3,5.3H14v-2.12L19.3,15.58z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
